class phone:#for all object one will be commom variable then we use the class variable
             #if object variable changes init variable is used
    charger_type="c_type"
    def __init__(self,brand,price):
        self.brand=brand
        self.price=price
    def display(self):
        print("brand",self.brand)
        print("price",self.price)
        print("chargertype",self.charger_type)
phone.charger_type="b_type"
samsung=phone("samsung",10000)
samsung.display()
redmi=phone("redmi",100000)
redmi.display()


